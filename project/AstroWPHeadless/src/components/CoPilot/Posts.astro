---
import Post from './Post.astro';
import wordpressImageOptimizer from '@integrations/wordpressImageOptimizer';

// Fetch posts data
let posts = [];
try {
  posts = await wordpressImageOptimizer();
} catch (error) {
  console.error('Error fetching posts:', error);
}
---

{posts.map(post => (
  <Post content={post.content} />
))}